@model IEnumerable<Crashes.Models.Crash>

@if (Model.Count() > 0)
{
    <table class="table table-hover col-md-12">
        <tr>
            <th>@Html.DisplayName("Начало")</th>
            <th>@Html.DisplayName("Окончание")</th>
            <th>@Html.DisplayName("Причина")</th>
            <th>@Html.DisplayName("Автор")</th>
            <th></th>
        </tr>
        @foreach (var crash in Model)
        {
            <tr>
                <td>@crash.Start</td>
                <td>
                    @if (crash.Stop != null)
                    {
                        @crash.Stop
                    }
                </td>
                <td>@crash.Reason</td>
                <td>@crash.Role.WorkerName</td>
                <td>
                    @Html.ActionLink("Управление", "CrashManage", "Home", new { id = crash.Id, sender = "search" },
                            new { @class = "btn btn-xs btn-default", target = "_blank" })
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="col-md-12 text-center h3">Простои за период отсутствуют</div>
}